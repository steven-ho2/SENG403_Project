<UserControl x:Class="Team4Clock.AlarmUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Team4Clock"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Margin="-95,0,0,175" Background="WhiteSmoke">

        <Label x:Name="alarmTime" Height="70" Canvas.Left="10" Canvas.Top="10" Width="303"/>
        <Button x:Name="cancelBtn" Content="X" Background="Red" Height="39" Canvas.Left="338" Canvas.Top="10" Width="47" Click="cancelBtn_Click"/>
        <Button x:Name="editBtn" Content="Edit" Background="DimGray" Height="41" Canvas.Left="338" Canvas.Top="63" Width="47" Click="editBtn_Click"/>
        <Button x:Name="onOffBtn" Content="ON" Background="WhiteSmoke" Height="22" Canvas.Left="10" Canvas.Top="93" Width="49" Click="onOffBtn_Click"/>


    </Canvas>
</UserControl>
