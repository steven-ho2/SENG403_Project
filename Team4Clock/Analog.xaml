<UserControl x:Class="Team4Clock.Analog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Team4Clock"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="640">
    <Grid x:Name="digitalBtn" Background="White" ContextMenuClosing="setDigital" RenderTransformOrigin="0.493,0.488">
        <Ellipse Margin="217,43,217,43" Stroke="Black" RenderTransformOrigin="0.5,0.5" StrokeThickness="3" Width="200" Height="200">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Button x:Name="digitalBtn1" Content="Digial" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="setDigital"/>
        <Button x:Name="setAlarmBtn" Content="Set Alarm" HorizontalAlignment="Right" Margin="0,0,10,263" VerticalAlignment="Bottom" Width="75" Click="setAlarm_Click"/>

    </Grid>
</UserControl>
